@{
    ViewData["Title"] = "Contact Information";
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_Navbar")

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f9f9f9;
    }

    .page-title {
        font-weight: 700;
        font-size: 2.5rem;
    }

    .subtitle {
        font-size: 1rem;
        font-weight: 500;
        color: #222;
    }

    .btn-group-toggle {
        display: flex;
        gap: 10px;
        margin-bottom: 30px;
    }

    .btn-toggle {
        font-weight: 500;
        font-size: 0.9rem;
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
        border: 1px solid #000;
        background-color: #fff;
        color: #000;
        transition: all 0.2s ease;
        cursor: pointer;
    }

        .btn-toggle.active {
            background-color: #000;
            color: #fff;
        }

    .contact-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #fff;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    }

    .contact-title {
        font-weight: 600;
        font-size: 1rem;
    }

    .contact-description {
        color: #555;
        font-size: 0.875rem;
        margin-top: 4px;
    }

    .btn-call {
        color: #000;
        font-size: 0.90rem;
        padding: 6px 14px;
        border-radius: 8px;
        border: none;
        font-weight: 500;
        background-color: #f0f0f0;
    }

    .btn-back {
        background-color: #000;
        color: #fff;
        font-weight: 500;
        border: 1px solid #000;
        padding: 6px 16px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 0.9rem;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">Contact Information</h1>
            <p class="subtitle">Important phone numbers and contact information for residents</p>
        </div>
        <div class="text-end">
            <a href="@Url.Action("FormsAndContacts", "Home")" class="btn btn-outline-dark">← Back</a>
        </div>
    </div>

    <div class="btn-group-toggle">
        <button class="btn-toggle active" onclick="toggleContacts('emergency')">Emergency</button>
        <button class="btn-toggle" onclick="toggleContacts('community')">Community</button>
    </div>

    <!-- Emergency Contacts -->
    <div id="emergencyContacts">
        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">🚑 Medical Emergency</div>
                    <div class="contact-description">For life-threatening medical cases</div>
                </div>
                <button class="btn-call">📞 911</button>
            </div>
        </div>

        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">🔥 Fire Department</div>
                    <div class="contact-description">For fire, smoke, or gas emergencies</div>
                </div>
                <button class="btn-call">📞 911</button>
            </div>
        </div>

        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">🚓 Police Department</div>
                    <div class="contact-description">Report crimes or suspicious activities</div>
                </div>
                <button class="btn-call">📞 911</button>
            </div>
        </div>

        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">⚡ Electrical Emergency</div>
                    <div class="contact-description">Power outages, sparks, or short circuits</div>
                </div>
                <button class="btn-call">📞 555-999-1234</button>
            </div>
        </div>

        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">🚰 Water Supply Emergency</div>
                    <div class="contact-description">Water line leaks or water interruptions</div>
                </div>
                <button class="btn-call">📞 555-222-8888</button>
            </div>
        </div>

        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">🚨 Building Security Hotline</div>
                    <div class="contact-description">Immediate security alerts within the premises</div>
                </div>
                <button class="btn-call">📞 555-000-9110</button>
            </div>
        </div>
    </div>

    <!-- Community Contacts -->
    <div id="communityContacts" style="display: none;">
        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">🏢 HOA Management Office</div>
                    <div class="contact-description">General inquiries, dues, and notices</div>
                </div>
                <button class="btn-call">📞 555-123-4567</button>
            </div>
        </div>

        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">👤 Community Manager</div>
                    <div class="contact-description">Resident concerns and policy enforcement</div>
                </div>
                <button class="btn-call">📞 555-456-7894</button>
            </div>
        </div>

        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">🛠️ Maintenance Office</div>
                    <div class="contact-description">Request repairs or report facility issues</div>
                </div>
                <button class="btn-call">📞 555-321-4444</button>
            </div>
        </div>

        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">🧹 Sanitation & Cleaning</div>
                    <div class="contact-description">Concerns about waste disposal or sanitation</div>
                </div>
                <button class="btn-call">📞 555-222-6677</button>
            </div>
        </div>

        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">🛡️ Security Office / Guardhouse</div>
                    <div class="contact-description">Gate access, visitor entry, security reports</div>
                </div>
                <button class="btn-call">📞 555-444-8899</button>
            </div>
        </div>

        <div class="contact-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="contact-title">📦 Delivery & Parcel Room</div>
                    <div class="contact-description">Check or claim your packages and mail</div>
                </div>
                <button class="btn-call">📞 555-303-1212</button>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleContacts(type) {
        const emergencySection = document.getElementById('emergencyContacts');
        const communitySection = document.getElementById('communityContacts');
        const buttons = document.querySelectorAll('.btn-toggle');

        buttons.forEach(btn => btn.classList.remove('active'));

        if (type === 'emergency') {
            emergencySection.style.display = 'block';
            communitySection.style.display = 'none';
            buttons[0].classList.add('active');
        } else {
            emergencySection.style.display = 'none';
            communitySection.style.display = 'block';
            buttons[1].classList.add('active');
        }
    }
</script>
