@{
    ViewData["Title"] = "Amenity Booking";
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_Navbar")

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f9f9f9;
    }

    .page-title {
        font-weight: 700;
        font-size: 2.5rem;
    }

    .subtitle {
        font-size: 1.25rem;
        font-weight: 500;
        color: #222;
    }

    .amenity-card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease;
        cursor: pointer;
    }

     .amenity-card:hover {
         transform: translateY(-5px);
     }

    .amenity-img {
        height: 180px;
        object-fit: cover;
        width: 100%;
    }

    .tag {
        font-size: 0.8rem;
        font-weight: 600;
        color: #6c757d;
        background-color: transparent;
        padding: 4px 10px;
        border-radius: 999px;
        display: inline-block;
        border: 1px solid #dee2e6;
    }

    .modal-content {
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        max-width: 600px;
        margin: auto;
    }

    .modal-img {
        max-width: 100%;
        height: auto;
        border-radius: 12px;
        margin-bottom: 20px;
    }

    .btn-black-outline {
        background-color: #fff;
        color: #000;
        border: 1px solid #000;
        border-radius: 8px;
        padding: 6px 16px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-black-outline:hover {
        background-color: #f8f9fa;
        border-color: #adb5bd;
    }

    .btn-red-outline {
        background-color: #fff;
        color: #dc3545; 
        border: 1px solid #dc3545;
        border-radius: 8px;
        padding: 6px 16px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

     .btn-red-outline:hover {
        background-color: #f8d7da;
        border-color: #c82333;
     }



</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">Amenity Booking</h1>
            <p class="subtitle">Book Now!</p>
        </div>
        <div class="text-end">
            <a href="@Url.Action("Dashboard", "Home")" class="btn btn-outline-dark">← Back</a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Clubhouse -->
        <div class="col-md-4">
            <div class="card amenity-card" data-bs-toggle="modal" data-bs-target="#clubhouseModal">
                <img src="/images/amenities/clubhouse.jpg" class="amenity-img" alt="Clubhouse">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-1">Clubhouse</h5>
                    <p class="card-text small mb-2 text-muted">Cost Range: ₱5,000 - ₱12,000/day</p>
                    <span class="tag">Function Space</span>
                </div>
            </div>
        </div>

        <!-- Function Hall -->
        <div class="col-md-4">
            <div class="card amenity-card" data-bs-toggle="modal" data-bs-target="#functionHallModal">
                <img src="/images/amenities/functionhall.jpg" class="amenity-img" alt="Function Hall">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-1">Function Hall</h5>
                    <p class="card-text small mb-2 text-muted">Cost Range: ₱4,000 - ₱10,000/day</p>
                    <span class="tag">Events</span>
                </div>
            </div>
        </div>

        <!-- Gym -->
        <div class="col-md-4">
            <div class="card amenity-card" data-bs-toggle="modal" data-bs-target="#gymModal">
                <img src="/images/amenities/gym.jpg" class="amenity-img" alt="Gym">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-1">Gym</h5>
                    <p class="card-text small mb-2 text-muted">Cost Range: ₱500/day</p>
                    <span class="tag">Fitness</span>
                </div>
            </div>
        </div>

        <!-- Patio -->
        <div class="col-md-4">
            <div class="card amenity-card" data-bs-toggle="modal" data-bs-target="#patioModal">
                <img src="/images/amenities/patio1.jpg" class="amenity-img" alt="Patio">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-1">Patio</h5>
                    <p class="card-text small mb-2 text-muted">Cost Range: ₱1,000 - ₱3,000/day</p>
                    <span class="tag">Outdoor</span>
                </div>
            </div>
        </div>

        <!-- Indoor Playroom -->
        <div class="col-md-4">
            <div class="card amenity-card" data-bs-toggle="modal" data-bs-target="#playroomModal">
                <img src="/images/amenities/playroom.jpg" class="amenity-img" alt="Indoor Playroom">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-1">Indoor Playroom</h5>
                    <p class="card-text small mb-2 text-muted">Cost Range: ₱500 - ₱1,500/day</p>
                    <span class="tag">Kids</span>
                </div>
            </div>
        </div>

        <!-- Pool -->
        <div class="col-md-4">
            <div class="card amenity-card" data-bs-toggle="modal" data-bs-target="#poolModal">
                <img src="/images/amenities/swimmingpool.jpg" class="amenity-img" alt="Pool">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-1">Pool</h5>
                    <p class="card-text small mb-2 text-muted">Cost Range: ₱3,000 - ₱8,000/day</p>
                    <span class="tag">Recreation</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->
@foreach (var amenity in new[] {
    new { Id = "clubhouse", Title = "Clubhouse", Img = "clubhouse.jpg", Price = "₱5,000 - ₱12,000/day", Description = "Ideal for gatherings and parties, with full facilities and AC." },
    new { Id = "functionHall", Title = "Function Hall", Img = "functionhall.jpg", Price = "₱4,000 - ₱10,000/day", Description = "Spacious hall suitable for large functions and events." },
    new { Id = "gym", Title = "Gym", Img = "gym.jpg", Price = "₱500/day", Description = "Well-equipped gym for residents with daily access." },
    new { Id = "patio", Title = "Patio", Img = "patio1.jpg", Price = "₱1,000 - ₱3,000/day", Description = "Outdoor space for relaxed meetups or small parties." },
    new { Id = "playroom", Title = "Indoor Playroom", Img = "playroom.jpg", Price = "₱500 - ₱1,500/day", Description = "Safe and fun space for children to play indoors." },
    new { Id = "pool", Title = "Pool", Img = "swimmingpool.jpg", Price = "₱3,000 - ₱8,000/day", Description = "Clean and secure swimming facility for families." }
})
{
    <div class="modal fade" id="@amenity.Id@("Modal")" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content p-4">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">@amenity.Title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <img src="/images/amenities/@amenity.Img" class="modal-img" alt="@amenity.Title" />
                    <p><strong>Cost Range:</strong> @amenity.Price</p>
                    <p><strong>Availability:</strong> Available</p>
                    <p><strong>Description:</strong> @amenity.Description</p>
                </div>
                <div class="modal-footer border-0">
                    <button class="btn btn-black-outline px-4" data-bs-dismiss="modal" onclick="openBookingForm('@amenity.Title')">Book</button>
                </div>
            </div>
        </div>
    </div>
}
<!-- Booking Form Modal -->
<div class="modal fade" id="bookingFormModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 600px;">
        <div class="modal-content p-4">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">Booking Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="bookingForm">
                <div class="modal-body">
                    <h6 class="fw-semibold mb-3">Personal Information</h6>
                    <input type="text" class="form-control mb-3" placeholder="Full Name:" required>
                    <input type="text" class="form-control mb-3" placeholder="Unit Number / Address:" required>

                    <div class="row g-2 mb-3">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Phone Number:" required>
                        </div>
                        <div class="col">
                            <input type="email" class="form-control" placeholder="Email:" required>
                        </div>
                    </div>

                    <h6 class="fw-semibold mb-3">Booking Details</h6>
                    <input type="text" class="form-control mb-3" id="amenityNameField" placeholder="Amenity/Facility:" readonly>
                    <input type="date" class="form-control mb-3" required>

                    <div class="row g-2 mb-3">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Purpose of Booking:" required>
                        </div>
                        <div class="col">
                            <input type="number" class="form-control" placeholder="Number of Attendees:" required>
                        </div>
                    </div>

                    <div class="row g-2">
                        <div class="col">
                            <input type="time" class="form-control" placeholder="Start Time:" required>
                        </div>
                        <div class="col">
                            <input type="time" class="form-control" placeholder="End Time:" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-black-outline px-4 py-2" onclick="showPaymentModal()">Proceed</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 600px;">
        <div class="modal-content p-4">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">Payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="paymentForm">
                <div class="modal-body">
                    <h6 class="fw-semibold mb-3">Booking Summary</h6>
                    <div class="mb-2">
                        <input type="text" class="form-control mb-2" id="paymentAmenity" placeholder="Amenity" readonly>
                        <input type="text" class="form-control mb-2" id="paymentDate" placeholder="Date of Booking" readonly>
                        <div class="row g-2">
                            <div class="col">
                                <input type="text" class="form-control" id="startTime" placeholder="Start Time" readonly>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="endTime" placeholder="End Time" readonly>
                            </div>
                        </div>
                    </div>

                    <h6 class="fw-semibold my-3">Payment Information</h6>

                    <!-- Reservation Fee -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">₱</span>
                        <input type="number" class="form-control" placeholder="Reservation Fee" min="0" step="any" required>
                    </div>

                    <!-- Security Deposit & Total Rental Fee -->
                    <div class="row g-2 mb-3">
                        <div class="col">
                            <div class="input-group">
                                <span class="input-group-text">₱</span>
                                <input type="number" class="form-control" placeholder="Security Deposit" min="0" step="any" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="input-group">
                                <span class="input-group-text">₱</span>
                                <input type="number" class="form-control" placeholder="Total Rental Fee" min="0" step="any" required>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Method -->
                    <select class="form-select mb-3" required>
                        <option value="" disabled selected>Select Payment Method</option>
                        <option>Cash</option>
                        <option>GCash</option>
                        <option>Bank Transfer</option>
                    </select>

                    <!-- Payment Remarks -->
                    <textarea class="form-control mb-3" placeholder="Payment Reference / Remarks" rows="2"></textarea>
                </div>

                <div class="modal-footer border-0 d-flex justify-content-end">
                    <button type="submit" class="btn btn-black-outline me-2">Save</button>
                    <button type="button" class="btn btn-red-outline" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Success Confirmation Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 420px;">
        <div class="modal-content p-4 text-center">
            <div class="modal-body">
                <div class="mb-3">
                    <i class="bi bi-check-circle-fill" style="font-size: 3rem; color: #198754;"></i>
                </div>
                <h5 class="fw-bold mb-2">Thank You!</h5>
                <p class="mb-4">Your booking has been successfully confirmed!<br />Thank you for using our facilities.</p>
                <button class="btn btn-black-outline px-4" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function openBookingForm(amenityName) {
        const amenityInput = document.getElementById("amenityNameField");
        if (amenityInput) {
            amenityInput.value = amenityName;
        }

        const modal = document.getElementById("bookingFormModal");
        if (modal) {
            const bookingModal = new bootstrap.Modal(modal);
            bookingModal.show();
        }
    }

    function showPaymentModal() {

        const amenity = document.getElementById("amenityNameField").value;
        const date = document.querySelector("#bookingForm input[type='date']").value;
        const startTime = document.querySelector("#bookingForm input[placeholder='Start Time:']").value;
        const endTime = document.querySelector("#bookingForm input[placeholder='End Time:']").value;

        document.getElementById("paymentAmenity").value = amenity;
        document.getElementById("paymentDate").value = date;
        document.getElementById("startTime").value = startTime;
        document.getElementById("endTime").value = endTime;

        const bookingModalEl = document.getElementById("bookingFormModal");
        const bookingModal = bootstrap.Modal.getInstance(bookingModalEl);
        bookingModal.hide();

        const paymentModal = new bootstrap.Modal(document.getElementById("paymentModal"));
        paymentModal.show();
    }

    document.addEventListener("DOMContentLoaded", () => {

        const numberFields = document.querySelectorAll("input[type='number']");
        numberFields.forEach(field => {
            field.addEventListener("keydown", (e) => {
                if (["e", "E", "+", "-"].includes(e.key)) {
                    e.preventDefault();
                }
            });
        });

        const paymentForm = document.getElementById("paymentForm");
        paymentForm.addEventListener("submit", function (e) {
            e.preventDefault(); 

            const paymentModalEl = document.getElementById("paymentModal");
            const paymentModal = bootstrap.Modal.getInstance(paymentModalEl);
            paymentModal.hide();


            const confirmationModal = new bootstrap.Modal(document.getElementById("confirmationModal"));
            confirmationModal.show();
        });
    });
</script>
