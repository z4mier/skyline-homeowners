﻿@{
    ViewData["Title"] = "Home";
}
﻿

<!-- Featured Listings -->
<section class="py-5 full-height" style="background-color: #f5f5f5;">
    <div class="container">
        <h3 class="text-center mb-4"
            style="font-size: 2.5rem; color: black; font-weight: bold;">
            Featured Listings
        </h3>

        <!-- Filter & Sort Options -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <a href="#" class="text-dark text-decoration-none fw-bold">SHOW FILTER</a>
                <span class="mx-2">|</span>
                <span class="text-muted">SORT: NEWEST</span>
            </div>
            <a href="#" class="text-dark fw-bold text-decoration-none">BROWSE ALL FEATURES ></a>
        </div>

        <div class="row">
            <!-- Listing Item -->
            <div class="col-md-4 mb-4">
                <div class="position-relative">
                    <img src="/images/park.jpg" class="img-fluid rounded shadow listing-image" alt="Community Park">
                    <div class="mt-2">
                        <h5 class="fw-bold">Community Park</h5>
                        <p class="text-muted" style="font-style: italic; font-size: 14px;">
                            "Lush green spaces for outdoor activities and relaxation"
                        </p>
                        <p class="fw-bold text-uppercase text-muted small">PARKS & NATURE</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="position-relative">
                    <img src="/images/clubhouse.jpg" class="img-fluid rounded shadow listing-image" alt="Clubhouse & Lounge">
                    <div class="mt-2">
                        <h5 class="fw-bold">Clubhouse & Lounge</h5>
                        <p class="text-muted" style="font-style: italic; font-size: 14px;">
                            "A modern clubhouse with lounge areas, meeting rooms, and events space."
                        </p>
                        <p class="fw-bold text-uppercase text-muted small">AMENITIES</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="position-relative">
                    <img src="/images/pool.jpg" class="img-fluid rounded shadow listing-image" alt="Swimming Pool">
                    <div class="mt-2">
                        <h5 class="fw-bold">Swimming Pool</h5>
                        <p class="text-muted" style="font-style: italic; font-size: 14px;">
                            "A resort-style swimming pool for leisure and fitness."
                        </p>
                        <p class="fw-bold text-uppercase text-muted small">RECREATION</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .listing-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
    }

        .listing-image:hover {
            transform: scale(1.05);
        }
</style>

<!-- About & Contact Section -->
<section id="about-contact-section" class="py-5" style="background-color: black; color: white; padding: 50px 10vw; display: flex; justify-content: space-between; flex-wrap: wrap;">

    <!-- About Section -->
    <div style="max-width: 45%;">
        <h5 style="text-transform: uppercase; font-weight: bold; margin-bottom: 15px;">About Us</h5>
        <p style="line-height: 1.6;">
            Skyline Homeowners is a modern residential community designed for comfort and sustainability.
            We are committed to providing a well-maintained, secure, and vibrant neighborhood where residents
            can enjoy a high quality of life.
        </p>
        <p style="line-height: 1.6;">
            Our community offers thoughtfully designed spaces, exclusive amenities, and a welcoming environment
            that fosters connection and belonging. Whether you’re looking for relaxation, recreation, or a strong
            sense of community, Skyline Homeowners is the perfect place to call home.
        </p>
    </div>

    <!-- Contact Section -->
    <div style="max-width: 45%;">
        <h5 style="text-transform: uppercase; font-size: 15px; font-weight: bold; margin-bottom: 15px;">Contact Us</h5>
        <p>Skyline Homeowners</p>
        <p>123 Skyline Avenue</p>
        <p>Tel: +1 234 567 8900</p>

        <h5 style="text-transform: uppercase; font-weight: bold; margin-top: 30px;">Get in Touch</h5>
        <p>Homeowner Support</p>
    </div>

</section>