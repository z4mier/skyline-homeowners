@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Oakland Homeowners Association</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        body {
            font-family: 'Josefin Sans', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .feature-box {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 10px;
            justify-content: center;
            max-width: 800px;
            margin: 40px auto;
        }

        .feature-card {
            color: white;
            padding: 20px;
            text-align: center;
            width: 100%;
            height: 250px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            border-radius: 10px;
            text-decoration: none;
            transition: transform 0.2s ease-in-out, opacity 0.2s;
        }

            .feature-card:hover {
                transform: scale(1.05);
                opacity: 0.9;
            }

        /* Feature Card Colors */
        .announcements, .bills-payments, .maintenance-request {
            background-color: #565449;
        }

        .event-calendar, .amenity-booking, .feedback {
            background-color: #333131;
        }
    </style>
</head>
<body>

    <div class="container text-center my-5">
        <h2>Community Living Solutions</h2>
        <p>
            Enhancing your everyday living with seamless solutions designed for convenience and connection.
            From timely updates and event planning to simplified payments, amenity reservations, and more,
            Community Living Solutions bring everything you need right to your fingertips.
        </p>

        <!-- Feature Cards -->
        <div class="feature-box">
            <a href="@Url.Action("Announcements", "Home")" class="feature-card announcements">
                <i class="bi bi-megaphone" style="font-size: 2rem;"></i>
                <strong>Announcements</strong>
                <p>Stay informed with important updates and notices.</p>
            </a>

            <a href="@Url.Action("EventCalendar", "Home")" class="feature-card event-calendar">
                <i class="bi bi-calendar-event" style="font-size: 2rem;"></i>
                <strong>Event Calendar</strong>
                <p>Track upcoming events and activities easily.</p>
            </a>

            <a href="@Url.Action("BillsPayments", "Home")" class="feature-card bills-payments">
                <i class="bi bi-cash-stack" style="font-size: 2rem;"></i>
                <strong>Bills & Payments</strong>
                <p>Manage and settle your bills in one place.</p>
            </a>

            <a href="@Url.Action("AmenityBooking", "Home")" class="feature-card amenity-booking">
                <i class="bi bi-building" style="font-size: 2rem;"></i>
                <strong>Amenity Booking</strong>
                <p>Reserve shared facilities hassle-free.</p>
            </a>

            <a href="@Url.Action("MaintenanceRequest", "Home")" class="feature-card maintenance-request">
                <i class="bi bi-tools" style="font-size: 2rem;"></i>
                <strong>Maintenance Request</strong>
                <p>Report and monitor maintenance concerns.</p>
            </a>

            <a href="@Url.Action("Feedback", "Home")" class="feature-card feedback">
                <i class="bi bi-chat-dots" style="font-size: 2rem;"></i>
                <strong>Feedback</strong>
                <p>Share your thoughts and suggestions.</p>
            </a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>