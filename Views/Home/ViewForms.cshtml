@{
    ViewData["Title"] = "Downloadable Forms";
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_Navbar")

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f9f9f9;
    }

    .page-title {
        font-weight: 700;
        font-size: 2.5rem;
    }

    .subtitle {
        font-size: 1rem;
        font-weight: 500;
        color: #222;
    }

    .download-section {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 16px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    }

    .download-info h5 {
        font-weight: 600;
        margin-bottom: 4px;
    }

    .download-info p {
        font-size: 0.85rem;
        color: #666;
        margin: 0;
    }

    .btn-download {
        background-color: #000;
        color: #fff;
        font-weight: 500;
        border: 1px solid #000;
        padding: 6px 14px;
        border-radius: 8px;
        font-size: 0.85rem;
        transition: all 0.2s ease;
        text-decoration: none !important;
    }

        .btn-download i {
            margin-right: 6px;
        }

    a {
        text-decoration: none !important;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">Downloadable Forms</h1>
            <p class="subtitle">Access community guidelines, reports, meeting minutes, and more.</p>
        </div>
        <div class="text-end">
            <a href="@Url.Action("FormsAndRequests", "Home")" class="btn btn-outline-dark">← Back</a>
        </div>
    </div>

    <!-- Downloadable Items -->
    <div class="download-section">
        <div class="download-info">
            <h5><i class="fas fa-file-alt"></i> Homeowner Registration Form</h5>
            <p>Register your household in the community database</p>
        </div>
        <a href="/forms/HomeownerRegistrationForm.pdf" download class="btn-download">
            <i class="fas fa-download"></i> Download
        </a>
    </div>

    <div class="download-section">
        <div class="download-info">
            <h5><i class="fas fa-book"></i> Community Guidelines Handbook</h5>
            <p>Rules, regulations, and policies for all residents</p>
        </div>
        <a href="/forms/CommunityGuidelines.pdf" download class="btn-download">
            <i class="fas fa-download"></i> Download
        </a>
    </div>

    <div class="download-section">
        <div class="download-info">
            <h5><i class="fas fa-file-invoice-dollar"></i> Latest Financial Report</h5>
            <p>View the latest HOA financial statements</p>
        </div>
        <a href="/forms/FinancialReport2024.pdf" download class="btn-download">
            <i class="fas fa-download"></i> Download
        </a>
    </div>

    <div class="download-section">
        <div class="download-info">
            <h5><i class="fas fa-calendar-alt"></i> Annual Meeting Minutes</h5>
            <p>Review decisions and discussions from last general assembly</p>
        </div>
        <a href="/forms/MeetingMinutes2024.pdf" download class="btn-download">
            <i class="fas fa-download"></i> Download
        </a>
    </div>

    <div class="download-section">
        <div class="download-info">
            <h5><i class="fas fa-parking"></i> Vehicle Registration Form</h5>
            <p>Submit your vehicle details for parking sticker application</p>
        </div>
        <a href="/forms/VehicleRegistrationForm.pdf" download class="btn-download">
            <i class="fas fa-download"></i> Download
        </a>
    </div>

    <div class="download-section">
        <div class="download-info">
            <h5><i class="fas fa-user-shield"></i> Visitor Pass Request Form</h5>
            <p>Form to request advance visitor passes for guests</p>
        </div>
        <a href="/forms/VisitorPassRequestForm.pdf" download class="btn-download">
            <i class="fas fa-download"></i> Download
        </a>
    </div>
</div>
